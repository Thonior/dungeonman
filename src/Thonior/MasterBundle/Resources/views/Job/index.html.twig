{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Job list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Habilities</th>
                <th>Health</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>{{ entity.habilities }}</td>
                <td>{{ entity.health }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('job_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('job_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('job_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
