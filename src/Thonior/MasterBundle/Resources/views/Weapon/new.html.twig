{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Weapon creation</h1>

    {{ form_start(edit_form, {'attr':{'id' : 'form'} }) }}
    <div class="form-group">
    {{ form_label(edit_form.name) }}
    {{ form_errors(edit_form.name) }}
    {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control' } }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.description) }}
    {{ form_errors(edit_form.description) }}
    {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.shopPrice) }}
    {{ form_errors(edit_form.shopPrice) }}
    {{ form_widget(edit_form.shopPrice, { 'attr': {'class': 'form-control'} }) }}
    </div><div class="form-group">
    {{ form_label(edit_form.sellPrice) }}
    {{ form_errors(edit_form.sellPrice) }}
    {{ form_widget(edit_form.sellPrice, { 'attr': {'class': 'form-control'} }) }}
    </div><div class="form-group">
    {{ form_label(edit_form.weight) }}
    {{ form_errors(edit_form.weight) }}
    {{ form_widget(edit_form.weight, { 'attr': {'class': 'form-control'} }) }}
    </div><div class="form-group">
    {{ form_label(edit_form.damage) }}
    {{ form_errors(edit_form.damage) }}
    {{ form_widget(edit_form.damage, { 'attr': {'class': 'form-control'} }) }}
    </div><div class="form-group">
    {{ form_label(edit_form.damageType) }}
    {{ form_errors(edit_form.damageType) }}
    {{ form_widget(edit_form.damageType, { 'attr': {'class': 'form-control'} }) }}
    </div><div class="form-group">
    {{ form_label(edit_form.critChance) }}
    {{ form_errors(edit_form.critChance) }}
    {{ form_widget(edit_form.critChance, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.critBonus) }}
    {{ form_errors(edit_form.critBonus) }}
    {{ form_widget(edit_form.critBonus, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.bonus) }}
    {{ form_errors(edit_form.bonus) }}
    {{ form_widget(edit_form.bonus, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.bonusType) }}
    {{ form_errors(edit_form.bonusType) }}
    {{ form_widget(edit_form.bonusType, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.tags) }}
    {{ form_errors(edit_form.tags) }}
    {{ form_widget(edit_form.tags, { 'attr': {'data-role': 'tagsinput', 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>
    {{ form_end(edit_form) }}

    <a href="{{path('item')}}">
        Back to the list
    </a>
{% endblock %}
