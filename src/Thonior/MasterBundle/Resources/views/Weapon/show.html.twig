{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Weapon</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Extra</th>
                <td>{{ entity.extra }}</td>
            </tr>
            <tr>
                <th>Shopprice</th>
                <td>{{ entity.shopPrice }}</td>
            </tr>
            <tr>
                <th>Sellprice</th>
                <td>{{ entity.sellPrice }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ entity.weight }}</td>
            </tr>
            <tr>
                <th>Damage</th>
                <td>{{ entity.damage }}</td>
            </tr>
            <tr>
                <th>Damagetype</th>
                <td>{{ entity.damageType }}</td>
            </tr>
            <tr>
                <th>Critchance</th>
                <td>{{ entity.critChance }}</td>
            </tr>
            <tr>
                <th>Critbonus</th>
                <td>{{ entity.critBonus }}</td>
            </tr>
            <tr>
                <th>Bonus</th>
                <td>{{ entity.bonus }}</td>
            </tr>
            <tr>
                <th>Bonustype</th>
                <td>{{ entity.bonusType }}</td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                        {% for tag in entity.tags %}
                            <li>{{ tag }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>


        <a href="{{ path('weapon') }}">
            Back to the list of weapons
        </a>
    <br/>
        <a href="{{ path('item') }}">
            Back to the list of items
        </a>
    <br/>
        <a href="{{ path('weapon_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    {{ form(delete_form) }}

{% endblock %}
