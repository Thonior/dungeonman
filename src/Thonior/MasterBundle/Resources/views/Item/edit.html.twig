{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Item edit</h1>

    {{ form_start(edit_form, {'attr':{'id' : 'form'} }) }}
    <div class="form-group">
    {{ form_label(edit_form.name) }}
    {{ form_errors(edit_form.name) }}
    {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control' } }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.description) }}
    {{ form_errors(edit_form.description) }}
    {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.shopPrice) }}
    {{ form_errors(edit_form.shopPrice) }}
    {{ form_widget(edit_form.shopPrice, { 'attr': {'class': 'form-control'} }) }}
    </div>
    {{ form_label(edit_form.sellPrice) }}
    {{ form_errors(edit_form.sellPrice) }}
    {{ form_widget(edit_form.sellPrice, { 'attr': {'class': 'form-control'} }) }}
    <div class="form-group">
    {{ form_label(edit_form.weight) }}
    {{ form_errors(edit_form.weight) }}
    {{ form_widget(edit_form.weight, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.tags) }}
    {{ form_errors(edit_form.tags) }}
    {{ form_widget(edit_form.tags, { 'attr': {'data-role': 'tagsinput', 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>
    {{ form_end(edit_form) }}
  
        <a href="{{path('item')}}">
            Back to the list
        </a>
   
    <!--<li>{{ form(delete_form) }}</li>-->

{% endblock %}
