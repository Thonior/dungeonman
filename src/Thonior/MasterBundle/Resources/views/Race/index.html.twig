{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Race list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('race_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('race_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-primary" href="{{ path('race_edit', { 'id': entity.id }) }}">edit</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('race_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
