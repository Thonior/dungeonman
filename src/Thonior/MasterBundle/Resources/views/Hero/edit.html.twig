{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Hero edit</h1>

    {{ form_start(edit_form, {'attr':{'id' : 'form'} }) }}
    <div class="form-group">
    {{ form_label(edit_form.name) }}
    {{ form_errors(edit_form.name) }}
    {{ form_widget(edit_form.name, { 'attr': {'class': 'form-control' } }) }}
    </div>
    {% if entity.path %}
        <img width="50px" src="{{basepath}}{{entity.webPath}}"/>
    {% endif %}
    <div class="form-group">
    {{ form_label(edit_form.file) }}
    {{ form_errors(edit_form.file) }}
    {{ form_widget(edit_form.file, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.race) }}
    {{ form_errors(edit_form.race) }}
    {{ form_widget(edit_form.race, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.classes) }}
    {{ form_errors(edit_form.classes) }}
    {{ form_widget(edit_form.classes, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.alignment) }}
    {{ form_errors(edit_form.alignment) }}
    {{ form_widget(edit_form.alignment, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.level) }}
    {{ form_errors(edit_form.level) }}
    {{ form_widget(edit_form.level, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.description) }}
    {{ form_errors(edit_form.description) }}
    {{ form_widget(edit_form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>
    
    {{ form_label(edit_form.script) }}
    {{ form_errors(edit_form.script) }}
    {{ form_widget(edit_form.script, { 'attr': {'class': 'form-control'} }) }}
    <div class="form-group">
    {{ form_label(edit_form.health) }}
    {{ form_errors(edit_form.health) }}
    {{ form_widget(edit_form.health, { 'attr': {'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_label(edit_form.tags) }}
    {{ form_errors(edit_form.tags) }}
    {{ form_widget(edit_form.tags, { 'attr': {'data-role': 'tagsinput', 'class': 'form-control'} }) }}
    </div>
    <div class="form-group">
    {{ form_widget(edit_form.submit, { 'attr': {'class': 'btn btn-primary'} }) }}
    </div>
    {{ form_end(edit_form) }}
    

    <a href="{{path('hero')}}">
        Back to the list
    </a>
    <!--<li>{{ form(delete_form) }}</li>-->

{% endblock %}
