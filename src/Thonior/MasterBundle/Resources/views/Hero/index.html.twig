{% extends 'ThoniorMasterBundle::base.html.twig' %}

{% block body -%}
    <h1>Hero list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Alignment</th>
                <th>Level</th>
                <th>Actions</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>
                {% if entity.path %}
                    <img width="50px" src="{{basepath}}{{entity.webPath}}"/>
                {% endif %}
                </td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.alignment }}</td>
                <td>{{ entity.level }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('hero_show', { 'id': entity.id }) }}">show</a>
                    {% if entity.isAuthor %}
                        <a class="btn btn-primary" href="{{ path('hero_edit', { 'id': entity.id }) }}">edit</a>
                    {% endif %}
                </td>
                <td>{{ entity.rating|rating }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('hero_new') }}">
        Create a new entry
    </a>
    {% endblock %}
