{% extends 'ThoniorMasterBundle::content.html.twig' %}

{% block body -%}
    <h1>Chapter list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Title</th>
                <th>Content</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td>{{ entity.title }}</td>
                <td>{{ entity.content }}</td>
                <td>
                <ul>
                    <li>
                        <a class="manager" data-path="{{ path('chapter_show', { 'id': entity.id }) }}" href="#chapter_show">show</a>
                    </li>
                    <li>
                        <a href="{{ path('chapter_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a class="manager" data-path="{{ path('chapter_new') }}" href="#" >
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
